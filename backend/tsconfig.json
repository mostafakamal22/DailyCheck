{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "api",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules", "build/**/*"]
}
